<!DOCTYPE html>
<meta charset="UTF-8">
<html>
  <head>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"></link>
    <link rel="stylesheet" href="/static/css/playlists.css"></link>

    <script src="/static/js/table-dragger.min.js"></script>
    <script src="https://kit.fontawesome.com/db8c487bb7.js" crossorigin="anonymous"></script>
  </head>

  <header class="animate6s">
    <h1 class="rainbow">Azura</h1>
  </header>

  <div class="main">
  <body>
    <label for="playlists" style="display:none">Playlist:</label>
    <select name="playlists" id="playlists" onchange="change()">
      <option value="Select a playlist...">Select a playlist...</option>
      <option value="Add new playlist...">Add new playlist...</option>
      {% for playlist in playlists %}
        <option value="{{ playlist.id }}">{{ playlist.name }}</option>
      {% endfor %}
    </select>
    <input id="addRecordBtn" type="submit" value="Add Record" onclick="addRecord()" disabled>
    <input id="delPlaylistBtn" type="submit" value="Delete Playlist" onclick="deletePlaylist()" disabled>
    <input id="saveBtn" type="submit" value="Save" onclick="savePlaylist()" disabled>

    <label for="new_playlist_label" id="new_playlist_label" style="display:none">Name: </label>
    <input type="search" value="" id="new_playlist_entry" placeholder="Enter the name of the playlist..." class="namegen" style="display:none"></input>

    {% for playlist in playlists %}
    <div id="{{ playlist.id }}_anim_div">
    <label for="{{ playlist.id }}_name" id="{{ playlist.id }}_name_label" style="display:none">Name</label>
    <input type="search" value="{{ playlist.name }}" id="{{ playlist.id }}_name" placeholder="Enter the name of the playlist..." class="namegen" style="display:none"></input>
    <table class="dragtable" id="{{ playlist.id }}" style="display:none">
      <thead>
      <tr>
    		<th></th>
        <th class="namegen">Name</th>
        <th class="namegen">Source</th>
    		<th>Start</th>
    		<th>End</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
    		<form>
    			{% for item in playlist.entries %}
    			  <tr id="{{ playlist.id }}_{{ item.id }}">
    					<td class='handle' style="padding: 5px 5px 5px 5px"><i class="fas fa-bars"></i></td>
    			    <td><input type="search" value="{{ item.title }}" id="{{ playlist.id }}_{{ item.id }}_title" placeholder="Enter a title..." class="namegen"></input></td>
    			    <td><input type="search" value="{{ item.source }}" id="{{ playlist.id }}_{{ item.id }}_generator" placeholder="Enter the URL or search string..." class="namegen"></input></td>
    					<td><input type="search" value="{{ item.start }}" id="{{ playlist.id }}_{{ item.id }}_starttime" placeholder="Start at 00:00:00"></input></td>
    					<td><input type="search" value="{{ item.end }}" id="{{ playlist.id }}_{{ item.id }}_endtime" placeholder="End at end of track"></input></td>
              <td><button type="button" onclick="return deleteEntry(this);" value="{{ playlist.id }}_{{ item.id }}"><i class="fas fa-trash-alt"></i></button></td>
    			  </tr>
    			{% endfor %}
    		</form>
      </tbody>
    </table>
  </div>
    {% endfor %}
  </body>
</div>
  <script>
    var tables = document.getElementsByClassName('dragtable');
    for (i=0; i< tables.length; i++) {
    	el = tables[i];
    	var dragger = tableDragger(el, {
    	    dragHandler: '.handle',
    			mode: 'row',
    			onlyBody: true
    	});
    }
  </script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="/static/js/playlists.js"></script>
</html>
